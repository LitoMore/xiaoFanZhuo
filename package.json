{
    "name": "xiaoFanZhuo",
    "version": "0.4.0",
    "main": "app.js",
    "dependencies": {
        "oauth": "^0.9.15",
        "body-parser": "^1.17.1",
        "ejs": "^2.5.6",
        "electron": "^1.6.2",
        "electron-config": "^0.2.1",
        "express": "^4.15.2"
    },
    "devDependencies": {
        "electron-packager": "^8.5.2"
    },
    "scripts": {
        "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
        "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=xiaoFanZhuo --version-string.CompanyName=TAT --version-string.FileDescription=xiaoFanZhuo --version-string.ProductName=\"小饭桌\"",
        "package-linux" : "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
    }
}
